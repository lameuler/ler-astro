---
import { Head, Header, Footer, ThemeSwitch } from '@lameuler/ler-astro'
import '@lameuler/ler-astro/icon.css'
---

<html lang="en">
	<slot/>
</html>

<style is:global>
	html {
		height: 100%;
		--text: 0, 0, 0;
		color: rgb(var(--text));
		font-family: Lexend, system-ui, sans-serif;
		line-height: 1.5;
	}
	html.dark {
		color-scheme: dark;
		--text: 255, 255, 255;
	}
	body {
		display: grid;
		grid-template-rows: auto 1fr auto;
		margin: 0 auto;
		min-height: 100%;
		max-width: 80rem;
	}
	a {
		color: inherit;
        text-decoration: none;
	}
    button {
        background: none;
        color: inherit;
        border: none;
        padding: 0;
        outline: inherit;
        font: inherit;
        cursor: pointer;
    }
    code {
        font-family: ui-monospace;
    }
	@font-face {
		font-family: 'Lexend';
		font-style: normal;
		font-weight: 100 900;
		font-display: swap;
		src: url(https://eu.ler.sg/assets/_fonts/lexend-latin.woff2) format('woff2');
		unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
	}
</style>